@model RegistrationViewModel

<div class="page row">
    <div class="column">
        <div class="page-content">
            <div class="card">
                <div class="card-header">
                    <figure class="logo-wrapper">
                        <a href="https://sensenet.com" target="_blank">
                            <img class="logo" src="/images/sensenet-logo.png" alt="sensenet logo" />
                            <figcaption class="logo-caption">sensenet</figcaption>
                        </a>
                    </figure>
                </div>

                <div class="card-body">
                    <h1 class="card-title">Check your email to finish registration</h1>

                    <p class="text-center">
                        You should receive a confirmation email to the address you provided. Please click on the link in
                        that email to confirm your registration.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
